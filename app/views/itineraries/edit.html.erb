<div class="container">
	<div class="row">
		<h2><strong>旅のタイトル</strong></h2>

		<%= form_for([@traveller, @itinerary]) do |f| %>

		<%= f.text_field :title %>

		<h4>旅のテーマ</h4>
		<%= f.text_field :theme %>

		<h4>概要</h4>
		<%= f.text_area :synopsis %>

		<h4>公開ステータス</h4>
		<label><%= f.radio_button :public_status, :true %>公開</label>
		<label><%= f.radio_button :public_status, :false %>非公開</label>

		<%= f.submit '更新する' %>

		<% end %>

		<div class="col-sm-6">
			<%= link_to '行程を追加', new_traveller_itinerary_itinerary_spot_path(itinerary_id: @itinerary.id), remote: true, class: "btn btn-lg, btn-primary" %>
		</div>
		<div id="itinerary_spot-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>日付</th>
					<th>時間</th>
					<th>移動方法</th>
					<th>メモ</th>
					<th>spot</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @itinerary.itinerary_spots.each do |itinerary_spot| %>
					<%= render partial: "itinerary_spots/tr", locals: { itinerary_spot: itinerary_spot } %>
				<% end %>
			</tbody>
		</table>

	</div>
</div>