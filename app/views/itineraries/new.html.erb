<div class="container">
	<div class="row">

		<div class="mx-auto">

			<%= form_for([@traveller, @itinerary]) do |f| %>

			<div class="row" style="padding-bottom: 10px;"><%= f.text_field :title, :size=>"40", placeholder: "旅のタイトル" %></div>

			<div class="row" style="padding-bottom: 10px;"><%= f.text_field :theme, :size=>"40", placeholder: "旅のテーマ" %></div>

			<div class="row" style="padding-bottom: 10px;"><%= f.text_area :synopsis, :size=>"39x10", placeholder: "旅の概要" %></div>

			<div class="row" style="padding-bottom: 10px;">
				<label><%= f.radio_button :public_status, :true %>公開</label>
				<label><%= f.radio_button :public_status, :false %>非公開</label>
			</div>

			<%= f.submit('予定を立てる',class: "btn btn-primary btn-lg my-1 mb-5 px-5") %>

			<% end %>

		</div>

	</div>
</div>