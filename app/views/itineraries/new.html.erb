<div class="container">
	<div class="row">
		<h2><strong>旅のタイトル</strong></h2>

		<%= form_for([@traveller, @itinerary]) do |f| %>

		<%= f.text_field :title %>

		<h4>旅のテーマ</h4>
		<%= f.text_field :theme %>

		<h4>概要</h4>
		<%= f.text_area :synopsis %>

		<h4>公開ステータス</h4>
		<label><%= f.radio_button :public_status, :true %>公開</label>
		<label><%= f.radio_button :public_status, :false %>非公開</label>

		<%= f.submit '予定を立てる' %>

		<% end %>

	</div>
</div>