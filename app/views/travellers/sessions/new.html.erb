<div class="container">
  <div class="row">
    <div class="col-md-6">

      <div class="row">
        <div class="col">
          <h2>ログイン</h2>
        </div>
      </div>

      <br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row">
        <div class="col-xs-4">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder:"メールアドレス" %>
          </div>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col-xs-4">
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder:"パスワード" %>
          </div>
        </div>
      </div>

        <!-- <%# if devise_mapping.rememberable? %>
          <div class="field">
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          </div>
        <%# end %> -->

      <br>

      <div class="row">
        <div class="col">
          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-primary' %>
          </div>
        </div>
      </div>

      <% end %>

      <%#= render "travellers/shared/links" %>
    </div>

    <div class="col-md-6">
      <div class="row">
        <div class="col">
          <h2>新規登録</h2>
          <p>初めてLOKKIをご利用される方はこちらからご登録ください</p>

          <%= link_to "アカウントを作成", new_registration_path(resource_name), :style=>"color:white;", class: "btn btn-secondary" %>
        </div>
      </div>

    </div>

  </div>
</div>
