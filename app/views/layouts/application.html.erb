  </head>

  <body>
    <!-- <div id="wrapper"> -->
      <header>
        <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <nav class="navbar-header">
            logo
          </nav>
          <nav class="navbar-right">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                mypage
              </li>
              <li class="nav-item">
                <%= link_to "log in", traveller_session_path %>
